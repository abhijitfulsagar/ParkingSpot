<% include ../partials/header %>
<div class="container">
    <div class="newComment">
        <div class="row">
            <div style="width:30%;margin:25px auto;">
                <h1>Edit <%= comment.author%>'s comment</h1>
                <form action="/index/<%= campgroundId%>/comments/<%= comment._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" name="comment[text]" value="<%= comment.text%>" type="text"></input> 
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg  btn-block btn-primary">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>    
    </div>
</div>

