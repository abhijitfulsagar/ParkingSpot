<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to ParkingSpot</h1>   
            <p>View all the available parking spots</p>
            <p>
                <a class="btn btn-primary btn-large" href="/index/new">Add new Parking Spot</a>        
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        <% data.forEach(function(res){ %>
            <div class="col-md-3 col-sm-6">
                 <div class="thumbnail">
                     <img src="<%= res.image%>"></img>   
                     <div class="caption">
                        <h4><%= res.name %></h4> 
                     </div>
                     <p>
                         <a href="/index/<%=res._id%>" class="btn btn-primary">More Info</a>
                     </p>
                 </div>
            </div>
     
        <% }); %>    
    </div>    
    
    
</div>

<% include ../partials/footer %>