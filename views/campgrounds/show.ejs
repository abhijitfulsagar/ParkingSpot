<% include ../partials/header %>
    <div class="container" style="margin:60px auto;">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
                <div id="map"></div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src=<%=campgroundId.image%>></img>
                    <div class="caption-full">
                        
                        <h4 class="text-right">$<%=campgroundId.price%>/night</h4>
                        <h4 class="text-left">
                            <p><em>Submitted  by <%= campgroundId.author.username.charAt(0).toUpperCase()+campgroundId.author.username.substring(1,campgroundId.author.username.length) %></em></p>
                        </h4>
                        <h4><a href="/index"><%= campgroundId.name%></a></h4>
                         <p><%=campgroundId.description%></p>
                         <div class="text-left">
                             <% if(currentUser && campgroundId.author.id.equals(currentUser._id)){ %>
                                <a class="ui inverted purple button" href="/index/<%= campgroundId._id%>/edit">Edit</a>
                                <form id="deleteForm" action="/index/<%=campgroundId._id%>?_method=DELETE" method="POST">
                                    <button class="ui inverted red button" >Delete</button>
                                </form> 
                            <% } %>
                        </div>  
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="ui inverted orange button" href="/index/<%= campgroundId._id%>/comments/new">Add Commnt</a>
                    </div>    
                </div>
                <hr></hr>
                 <% campgroundId.comments.forEach(function(comment){ %>
                     <div class="row">
                         <div class="col-md-12">
                                <strong><%= comment.author.username.charAt(0).toUpperCase()+comment.author.username.substring(1,comment.author.username.length)%></strong>
                                <p><span class="pull-right">10 days ago</span></p>
                                <p><%= comment.text%></p> 
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="ui inverted purple button" href="/index/<%= campgroundId._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form id="deleteForm" action="/index/<%=campgroundId._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <button class="ui inverted red button" >Delete</button>
                                    </form> 
                                <% } %>
                         </div>
                     </div>
                     <hr></hr>
                <% }) %>
            </div>
        </div>
    </div>
    
    <script>
  function initMap() {
    var lat = <%= campgroundId.lat %>;
    var lng = <%= campgroundId.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= campgroundId.name %><br />
      <%= campgroundId.location %></strong>
      <p><%= campgroundId.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAWSsO3N7NxFgtDVbX0NQdf1NUzvDTUoyc&callback=initMap"></script>

<% include ../partials/footer %>