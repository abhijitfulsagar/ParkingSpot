<% include ../partials/header %>
    <div class="container" style="margin:60px auto;">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                    <li class="list-group-item">Info 4</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src=<%=campgroundId.image%>></img>
                    <div class="caption-full">
                        
                        <h4 class="text-right">$9.00 per night</h4>
                        <h4 class="text-left">
                            <p><em>Submitted  by <%= campgroundId.author.username %></em></p>
                        </h4>
                        <h4><a href="/index"><%= campgroundId.name%></a></h4>
                         <p><%=campgroundId.description%></p>
                         <div class="text-left">
                             <% if(currentUser && campgroundId.author.id.equals(currentUser._id)){ %>
                                <a class="ui inverted purple button" href="/index/<%= campgroundId._id%>/edit">Edit</a>
                                <form id="deleteForm" action="/index/<%=campgroundId._id%>?_method=DELETE" method="POST">
                                    <button class="ui inverted red button" >Delete</button>
                                </form> 
                            <% } %>
                        </div>  
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="ui inverted orange button" href="/index/<%= campgroundId._id%>/comments/new">Add Commnt</a>
                    </div>    
                </div>
                <hr></hr>
                 <% campgroundId.comments.forEach(function(comment){ %>
                     <div class="row">
                         <div class="col-md-12">
                                <strong><%= comment.author%></strong>
                                <p><span class="pull-right">10 days ago</span></p>
                                <p><%= comment.text%></p>        
                         </div>
                     </div>
                <% }) %>
            </div>
        </div>
        
       
    </div>
<% include ../partials/footer %>