<% include ../partials/header%>
<div class="container">
    <div class="newCampground">
        <div class="row">
            <div style="width:30%;margin:75px auto;">
                <h1>Book <%= parking.name%> Parking Spot</h1>
                <form action="/index/<%=parking._id%>/book" method="POST">
                    
                    <div class="form-group">
                         <input class="form-control" name="data[phoneNumber]" type="number" maxlength="10" placeholder="1234567890" required></input>
                    </div><div class="form-group">
                         <input class="form-control" name="data[bookdate]" type="date" required></input>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg  btn-block btn-primary">BOOK</button>
                    </div>
                </form>
            </div>
        </div>    
    </div>
</div>

<% include ../partials/footer%>