<% include ../partials/header%>
<div class="container">
    <div class="newCampground">
        <div class="row">
            <div style="width:30%;margin:25px auto;">
                <h1>Edit <%= campground.name%></h1>
                <form action="/index/<%= campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" name="data[name]" value="<%= campground.name%>" type="text"></input>
                    </div>
                    <div class="form-group">
                         <input class="form-control" name="data[image]" value="<%= campground.image%>" type="text"></input> 
                    </div>
                    <div class="form-group">
                         <input class="form-control" name="data[price]" value="<%= campground.price%>" type="number" min="5" step="0.1"></input>
                    </div>
                     <div class="form-group">
                         <input class="form-control" name="data[description]" value="<%= campground.description%>" type="text"></input> 
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg  btn-block btn-primary">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>    
    </div>
</div>

<% include ../partials/footer%>